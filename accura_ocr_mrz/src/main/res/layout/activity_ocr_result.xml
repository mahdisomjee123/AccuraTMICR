<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.OcrResultActivity">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivUserProfile"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/default_user" />

                </LinearLayout>

                <!--front table-->
                <LinearLayout
                    android:id="@+id/ly_front_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@drawable/tab_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.accurascan.ocr.mrz.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_title"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2dp"
                        android:paddingBottom="@dimen/_2dp"
                        android:text="Front Side OCR:"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/front_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_holder_image"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_marginBottom="4dp"
                        android:divider="@color/tab_color"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" >
                    </TableLayout>

                </LinearLayout>
                <!--back table-->
                <LinearLayout
                    android:id="@+id/ly_back_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@drawable/tab_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.accurascan.ocr.mrz.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_title"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2dp"
                        android:paddingBottom="@dimen/_2dp"
                        android:text="Back Side OCR:"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/back_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_holder_image"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_marginBottom="4dp"
                        android:divider="@color/tab_color"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--//mrz table-->
                <LinearLayout
                    android:id="@+id/ly_mrz_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@drawable/tab_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.accurascan.ocr.mrz.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_title"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2dp"
                        android:paddingBottom="@dimen/_2dp"
                        android:text="MRZ:"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/mrz_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_holder_image"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_marginBottom="4dp"
                        android:divider="@color/tab_color"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--Security Check-->
                <LinearLayout
                    android:id="@+id/ly_security_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@drawable/tab_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.accurascan.ocr.mrz.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_title"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2dp"
                        android:paddingBottom="@dimen/_2dp"
                        android:text="Security Check:"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/security_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_holder_image"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_marginBottom="4dp"
                        android:divider="@color/tab_color"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--barcode-->
                <LinearLayout
                    android:id="@+id/ly_barcode_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@drawable/tab_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.accurascan.ocr.mrz.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_title"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2dp"
                        android:paddingBottom="@dimen/_2dp"
                        android:text="BarCode:"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/barcode_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_holder_image"
                        android:layout_marginStart="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_2dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:divider="@color/tab_color"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>


                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_holder_image"
                    android:layout_marginTop="10dp"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    android:background="@color/white"
                    android:elevation="@dimen/_2dp"
                    app:cardCornerRadius="@dimen/_5dp"
                    app:cardElevation="@dimen/_5dp">

                    <LinearLayout
                        android:id="@+id/ly_front"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/table_layout"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10dp">

                        <com.accurascan.ocr.mrz.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:paddingTop="@dimen/_2dp"
                            android:paddingBottom="@dimen/_2dp"
                            android:text="FRONT SIDE:"
                            android:textAllCaps="true"
                            android:textColor="@color/tab_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_frontside"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    android:background="@color/white"
                    android:elevation="@dimen/_2dp"
                    app:cardCornerRadius="@dimen/_5dp"
                    app:cardElevation="@dimen/_5dp"

                    >

                    <LinearLayout
                        android:id="@+id/ly_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_front"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10dp">

                        <com.accurascan.ocr.mrz.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="BACK SIDE:"
                            android:textAllCaps="true"
                            android:textColor="@color/tab_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_backside"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ry_cardresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:orientation="vertical">

            <com.accurascan.ocr.mrz.customview.CustomTextView
                android:id="@+id/tvCancel1"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_weight="1"
                android:background="@drawable/round_border_rect"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/seventeen"
                app:typeface="ALLER_STD_DISPLAY" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>